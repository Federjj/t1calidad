@model ObandoGamboaFabricio.ViewModels.LoginVM;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ObandoGamboaFabricio.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="row mt-5 justify-content-center">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    Iniciar Sesión
                </div>
                <div class="card-body">
                    <form asp-controller="Acceso" asp-action="Login" method="post">
                        <input class="form-control mb-3" name="Correo" type="email" placeholder="Email" required
                            asp-for="Correo" />
                        <input class="form-control mb-3" name="Password" type="password" placeholder="Contraseña"
                            required asp-for="Password" />
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Iniciar Sesión
                            </button>
                        </div>
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"];
                            </div>
                        }
                    </form>
                    ¿No tiene una cuenta? <a asp-controller="Acceso" asp-action="Registro">Regístrese</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
            $(document).ready(function () {
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                                alert('@Html.Raw(TempData["ErrorMessage"])');
            </text>
        }
        });
    </script>
</body>

</html>
