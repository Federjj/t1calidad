@model IEnumerable<ObandoGamboaFabricio.Models.Articulo>

@{
    ViewData["Title"] = "Inventario";
}

<div class="container mt-4">
    <h2>Inventario de Productos</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Categor√≠a</th>
                <th>Proveedor</th>
                <th>Stock</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var articulo in Model)
            {
                <tr>
                    <td>@articulo.Nombre</td>
                    <td>@articulo.Precio.ToString("F2")</td>
                    <td>@articulo.Categoria?.Nombre</td>
                    
                    <td>@articulo.Stock</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@articulo.IdArticulo" class="btn btn-primary btn-sm">Editar Stock</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
