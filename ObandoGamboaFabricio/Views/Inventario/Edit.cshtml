@model ObandoGamboaFabricio.Models.Articulo

@{
    ViewData["Title"] = "Editar Stock";
}

<div class="container mt-4">
    <h2>Editar Stock</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="IdArticulo" />
        
        <div class="form-group mb-3">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" readonly />
        </div>
        
        <div class="form-group mb-3">
            <label asp-for="Precio"></label>
            <input asp-for="Precio" class="form-control" readonly />
        </div>
        
        <div class="form-group mb-3">
            <label asp-for="Stock">Stock</label>
            <input asp-for="Stock" class="form-control" type="number" min="0" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
