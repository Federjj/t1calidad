@model ObandoGamboaFabricio.Models.Articulo
@{
    ViewData["Title"] = "Crear Articulo";
}

<h2>Crear Producto</h2>

<div class="mb-3">
    <a asp-controller="Categoria" asp-action="Create" class="btn btn-info">Agregar Categoría</a>
    <a asp-controller="Proveedor" asp-action="Create" class="btn btn-info">Agregar Proveedor</a>
</div>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Precio" class="control-label"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="CategoriaId" class="control-label">Categoría</label>
        <select asp-for="CategoriaId" class="form-control"
            asp-items="@(new SelectList(ViewBag.Categorias, "IdCategoria", "Nombre"))"></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
