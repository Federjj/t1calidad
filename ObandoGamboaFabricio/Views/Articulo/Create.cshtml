@model ObandoGamboaFabricio.ViewModels.ArticuloVM
@{
    ViewData["Title"] = "Crear Producto - Café Aroma";
}

<div class="container">
    <h2>Crear Nuevo Producto</h2>

    <div class="mb-3">
        <a asp-controller="Categoria" asp-action="Create" class="btn btn-info">Agregar Categoría</a>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre del Producto</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del producto" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"
                        placeholder="Ingrese la descripción del producto"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Precio" class="form-label">Precio (S/.)</label>
                    <input asp-for="Precio" type="number" step="0.01" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Stock" class="form-label">Stock Disponible</label>
                    <input asp-for="Stock" type="number" class="form-control" placeholder="0" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImagenUrl" class="form-label">URL de la Imagen</label>
                    <input asp-for="ImagenUrl" class="form-control" placeholder="https://ejemplo.com/imagen.jpg" />
                    <small class="form-text text-muted">Puede ser una URL externa o una ruta local</small>
                    <span asp-validation-for="ImagenUrl" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="CategoriaId" class="form-label">Categoría</label>
                    <select asp-for="CategoriaId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Categorias, "IdCategoria", "Nombre"))">
                        <option value="">Seleccione una categoría</option>
                    </select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <button type="submit" class="btn btn-success">Guardar Producto</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}