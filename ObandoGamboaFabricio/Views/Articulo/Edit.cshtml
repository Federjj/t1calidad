@model ObandoGamboaFabricio.ViewModels.ArticuloVM
@{
    ViewData["Title"] = "Editar Articulo";
}

<h2>Editar Articulo</h2>

<form asp-action="EditConfirmed" method="post">
    <input type="hidden" asp-for="IdArticulo" />
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Precio" class="control-label"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="CategoriaId" class="control-label">Categor√≠a</label>
        <select asp-for="CategoriaId" class="form-control"
            asp-items="@(new SelectList(ViewBag.Categorias, "IdCategoria", "Nombre"))"></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ProveedorId" class="control-label">Proveedor</label>
        <select asp-for="ProveedorId" class="form-control"
            asp-items="@(new SelectList(ViewBag.Proveedores, "IdProveedor", "Nombre"))"></select>
        <span asp-validation-for="ProveedorId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
